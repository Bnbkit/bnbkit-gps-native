{
  "expo": {
    "name": "BNBKit Driver Tracker",
    "slug": "bnbkit-driver-tracker",
    "version": "1.0.0",
    "orientation": "portrait",
    "userInterfaceStyle": "light",
    "icon": "./assets/icon.png",
    "splash": {
      "image": "./assets/icon.png",
      "resizeMode": "contain", 
      "backgroundColor": "#e83c7b"
    },
    "assetBundlePatterns": [
      "**/*"
    ],
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.bnbkit.drivertracker",
      "infoPlist": {
        "NSLocationAlwaysAndWhenInUseUsageDescription": "BNBKit needs location access to track delivery routes and provide real-time updates to customers.",
        "NSLocationWhenInUseUsageDescription": "BNBKit needs location access to track delivery routes.",
        "UIBackgroundModes": ["location"]
      }
    },
    "android": {
      "package": "com.bnbkit.drivertracker",
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#E91E63"
      },
      "permissions": [
        "ACCESS_COARSE_LOCATION",
        "ACCESS_FINE_LOCATION",
        "ACCESS_BACKGROUND_LOCATION"
      ]
    },
    "plugins": [
      [
        "expo-location",
        {
          "locationAlwaysAndWhenInUsePermission": "Allow BNBKit to use your location for delivery tracking.",
          "isIosBackgroundLocationEnabled": true,
          "isAndroidBackgroundLocationEnabled": true
        }
      ]
    ]
  }
}
